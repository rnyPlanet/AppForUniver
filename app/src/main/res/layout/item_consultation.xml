<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_consultation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card">

    <TextView
        android:id="@+id/list_item_consultation_FIO_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:paddingStart="@dimen/page_padding"
        android:paddingTop="@dimen/page_padding"
        android:paddingEnd="@dimen/page_padding"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_consultation_roomNum_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_consultation_FIO_tv"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_consultation_roomNum_tv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_consultation_dateOfPassage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/date_label_style"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingStart="@dimen/page_padding"
            android:paddingTop="8dp"
            android:paddingEnd="@dimen/page_padding"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/list_item_consultation_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/page_padding"
            android:paddingTop="8dp"
            android:paddingEnd="@dimen/page_padding"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>